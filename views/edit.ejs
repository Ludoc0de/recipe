<body>
    <section>
        <h2>Admin</h2>
        <% for (let i=0; i<recipe.length; i++) {%>
            <section>
                <!-- update href to the view where gonna edit -->
                <a href="/recipe/<%= recipe[i]._id %>" class="edit">
                    <h2 class="title">
                        <%= recipe[i].title %>
                    </h2>
                </a>
                <br>
            </section>
            <% } %>
    </section>
    <section>
        <h2>Post new article</h2>
        <form action="/" method="POST">
                <input type="text" placeholder="title" name="title">
                <textarea name="article" rows="4" cols="50">
                </textarea>
                <button type="submit">send</button>
            </form>
    </section>
