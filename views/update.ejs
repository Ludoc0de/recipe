<body>
    <section>
        <h2>Admin</h2>
            <% for (let i=0; i<recipe.length; i++) {%>
                <% if (recipe[i]._id==idArticle) { %>
                    <form action="/update/<%= recipe[i]._id %>" method="POST">
                        <input type="text" value="<%= recipe[i].title %>" name="title">
                        <textarea rows="6" cols="50" name="article"><%= recipe[i].article %></textarea>
                        <button type="submit" class="confirm">Update</button>
                        <a href="/edit" class="cancel">Cancel</a>
                        <a href="/update/remove/<%= recipe[i]._id %>" class="delete">Delete</a>
                    </form>
                <% } %>
            <% } %>
    </section>
    <script src="/js/main.js"></script>
</body>

</html>